{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des articles</h1>

    {% for post in posts %}
        <div class="card mb-3">
            <div class="card-body">
                <h3>{{ post.title }}</h3>
                <p>{{ post.content|slice(0,150) }}...</p>
                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Voir</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
